<%- include('header') %>
<%- include('modal') %>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<style>
  body{
    font-family: poppins;
  }
</style>
  <form id="loginform" action="#" method="post">
    <div class="container-flex LoginPage d-flex justify-content-evenly" data-ride="carousel" style="background-position:center  ;background-size:cover; background-image: url('/Images/BackGround_Admin.jpg'  );">
      <div class=" container-fluid" style="background-color: rgba(62, 62, 62, 0.668);">
        <div class="container-fluid d-flex flex-wrap " style="min-height: 100vh;margin-top: 25%; ">
          <div class="container col-md-9 col-lg-8 col-sm-12 ">
            <br><br><br><br><br>
            <small id="idanimatedMessageLogin" class="text-warning custom-text" style="font-size: 2.5rem; height: 100px;">Elevate the Celebration!</small>
          </div>
        
          <div class="container col-md-3 col-lg-3 col-sm-12 border border-light rounded m-4 p-3" style="background-color: rgba(86, 81, 59, 0.5); height: 400px;">
            <div class="container mt-2">
              <div class="container d-flex align-items-center" style="height: 50px;"></div>
              <div class="container align-items-center" style="height: 80px;">
                <small class="text-light">Welcome to</small><br>
                <small style="font-size: 1.5rem;" class="text-warning">Book my trip</small><br>
                <small id="idMessageBarAdminlogin" class="text-warning"></small><br>
              </div>
              <br>
              <div class="input-group border border-secondary p-2 rounded">
                <span class="input-group-text text-primary bg-light btn btn-secondary bi bi-person-bounding-box" id="basic-addon1"></span>
                <input type="email" class="form-control" id="idInputEmail" placeholder="Email" aria-label="Username" aria-describedby="basic-addon1">
              </div>
              <div class="input-group border border-secondary p-2 rounded">
                <span class="input-group-text text-primary btn btn-secondary bi bi-shield-lock" id="basic-addon2"></span>
                <input type="password" id="idinputPassword" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="basic-addon2">
              </div>
              <div class="container d-flex p-2 rounded justify-content-center">
                <div class="btn">
                  <button type="button" class="input-group-text btn btn-secondary rounded" onclick="adminlogin('idInputEmail', 'idinputPassword')" id="basic-addon3">SIGN-IN</button>
                  <small><a class="text-warning" data-bs-toggle="modal" data-bs-target="#idEnterOtp">FORGOT?</a></small>
                </div>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </form>

  <script src="/Script/adminPage.js"> </script>
  <script src="/Script/Script_Signup.js"> </script>
